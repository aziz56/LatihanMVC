<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Category</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Category</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form method="post" action="/Article/Create">
                    <div class="form-group">
                        <label for="Title">Title :</label>
                        <input type="text" class="form-control" name="Title"
                        placeholder="Insert Title" />
                        <label for="CategoryID">Category ID :</label>
                        <input type="text" class="form-control" name="CategoryID"
                        placeholder="Insert Category Name" />
                        <label for="Details">Details :</label>
                        <input type= "text" class=" form-control" name="Details"
                        placeholder="Insert Details" />
                        <label for="IsApproved">IsApproved :</label>
                        <label for="Approval">Approval :</label>
                        @Html.RadioButton("isApproved", "True") Approved
                        @Html.RadioButton("isApproved", "False") Not Approved
                    </div>

                    <input type="Submit" value="Create" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>

    </div>

</div>
